int main() {
    ATM atm;
    cin>>"Hello! Please choose for what purpose you are using this ATM : "<<endl;
    
     


    // For authenticating users
    if (atm.authenticateUser("user1", "password1")) {
     
        if (atm.depositMoney("user1", 100.0)) {
            std::cout << "Deposit successful.\n";
        }
    }

   

    return 0;
}
